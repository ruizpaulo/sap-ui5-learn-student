								<StandardListItem title="{FirstName} {LastName}" description="{i18n>birthText} {BirthDate}" icon="sap-icon://person-placeholder" type="Active"/>
							</items>
						</List>
						
					</content>
					<footer>
						<Bar>
						<contentRight>
							
							<Button text="Excluir" id="btnDeletar" icon="sap-icon://delete" type="Reject" press="excluirAluno"/>
						</contentRight>
							<contentLeft>
							<Button text="Criar" id="btnCriar" icon="sap-icon://save" type="Transparent" press="inserirAluno"/>	
							</contentLeft>
						</Bar>
					</footer>
